@model IEnumerable<GummyBearKingdom.Models.Product>

@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>

    .indexviews {
        background-color: black;
        color: white;
        font-weight: 200;
        padding-left: 15px;
        padding-right: 15px;
        padding-top: 30px;
        padding-bottom: 30px;
        border-left: 2px solid black;
        border-right: 2px solid black;
        height: 100%;
        opacity: .80;
    }

    a {
        color: #42f4f1;
        font-weight: bold;
    }

    p {
        font-size: 20px;
    }

</style>
 
<div class="indexviews">
    <h2>Gummy Bear Kingdom</h2>
    <hr />
    <table class="table ">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>



            <th></th>
        </tr>

        @foreach (var listProduct in Model)
        {
            <tr>
                <td>
                    <a>@Html.DisplayFor(x => listProduct.Name)</a>
                </td>
                <td>
                    @Html.DisplayFor(x => listProduct.Description)
                </td>
                <td>
                    $ @Html.DisplayFor(x => listProduct.Cost)
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = listProduct.ProductId }) |
                    @Html.ActionLink("Details", "Details", new { id = listProduct.ProductId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = listProduct.ProductId })

                </td>
            </tr>
        }
    </table>
    <p>
       @Html.ActionLink("Add New Product", "Create")</p>

    <p>@Html.ActionLink("Back to Home", "Index", "Home")</p>
</div>
