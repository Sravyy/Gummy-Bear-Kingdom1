@model IEnumerable<GummyBearKingdom.Models.Product>

@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Gummy Bear Kingdom</h2>
<hr />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cost)
        </th>
        


        <th></th>
    </tr>

    @foreach (var listProduct in Model)
    {
        <tr>
            <td>
               <a >@Html.DisplayFor(x => listProduct.Name)</a> 
            </td>
            <td>
                @Html.DisplayFor(x => listProduct.Description)
            </td>
            <td>
               $ @Html.DisplayFor(x => listProduct.Cost)
            </td>
          
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = listProduct.ProductId })
                @Html.ActionLink("Details", "Details", new { id = listProduct.ProductId })
                @Html.ActionLink("Delete", "Delete", new { id = listProduct.ProductId })
                
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Create New", "Create")
</p>

<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>